@model Notentool.Models.Entities.Grade

@{
    ViewData["Title"] = "Edit";
}

<div>
    <a asp-action="Index" asp-route-modulId="@ViewContext.RouteData.Values["modulId"]">← Zurück zum Modul</a>
</div>
<h1>Note @Model.Name bearbeiten</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-modulId="@ViewContext.RouteData.Values["modulId"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GradeID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gewichtung" class="control-label"></label>
                <input asp-for="Gewichtung" class="form-control" />
                <span asp-validation-for="Gewichtung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" /> |
                <a asp-action="Index" asp-route-modulId="@ViewContext.RouteData.Values["modulId"]">Abbrechen</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
